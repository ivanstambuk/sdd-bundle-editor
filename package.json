{
  "name": "sdd-bundle-editor",
  "version": "0.0.0",
  "private": true,
  "description": "SDD Bundle Editor monorepo (MVP)",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently -n server,web -c blue,green \"pnpm exec ts-node apps/server/src/index.ts\" \"pnpm --filter @sdd-bundle-editor/web dev\"",
    "dev:watch": "concurrently -n server,web,ui-shell -c blue,green,yellow \"pnpm exec ts-node apps/server/src/index.ts\" \"pnpm --filter @sdd-bundle-editor/web dev\" \"pnpm --filter @sdd-bundle-editor/ui-shell watch\"",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "axios": "^1.13.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "openai": "^6.10.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}