{
  "name": "@sdd-bundle-editor/ui-shell",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && find src -name '*.module.css' -exec sh -c 'cp \"$1\" \"dist/${1#src/}\"' _ {} \\;",
    "watch": "tsc -p tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@rjsf/core": "^5.21.0",
    "@rjsf/validator-ajv8": "^5.24.13",
    "@sdd-bundle-editor/shared-types": "workspace:*",
    "dagre": "^0.8.5",
    "js-yaml": "^4.1.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "reactflow": "^11.11.4",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/dagre": "^0.7.53",
    "@types/js-yaml": "^4.0.9",
    "@types/prismjs": "^1.26.5",
    "jsdom": "^27.2.0"
  },
  "peerDependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  }
}