{
  "name": "sdd-bundle-editor",
  "version": "0.0.0",
  "private": true,
  "description": "SDD Bundle Editor monorepo (MVP)",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently -n mcp,web,ui-shell -c magenta,green,yellow \"pnpm --filter @sdd-bundle-editor/mcp-server start:http\" \"pnpm --filter @sdd-bundle-editor/web dev\" \"pnpm --filter @sdd-bundle-editor/ui-shell watch\"",
    "dev:mcp-only": "pnpm --filter @sdd-bundle-editor/mcp-server start:http",
    "test": "pnpm -r --parallel test",
    "test:watch": "pnpm -r --parallel run test:watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ci": "vitest run --coverage --coverage.reporter=lcov",
    "test:visual": "playwright test e2e/visual-regression.spec.ts",
    "test:visual:update": "playwright test e2e/visual-regression.spec.ts --update-snapshots",
    "lint": "pnpm -r lint",
    "test:e2e": "playwright test",
    "test:e2e:smoke": "playwright test e2e/mcp-server.spec.ts --grep 'list_bundles|read_entity|health'",
    "test:smoke": "pnpm --filter @sdd-bundle-editor/mcp-server test && pnpm test:e2e:smoke",
    "kill:servers": "pkill -f 'mcp-server' 2>/dev/null; pkill -f webpack 2>/dev/null; echo 'Stale servers killed'"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "axios": "^1.13.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@9.0.0"
}