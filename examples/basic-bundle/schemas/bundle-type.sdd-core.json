{
  "bundleType": "sdd-core",
  "version": "1.0.0",
  "entities": [
    {
      "entityType": "Feature",
      "idField": "id",
      "schemaPath": "schemas/Feature.schema.json",
      "directory": "bundle/features",
      "filePattern": "{id}.yaml",
      "role": "feature"
    },
    {
      "entityType": "Requirement",
      "idField": "id",
      "schemaPath": "schemas/Requirement.schema.json",
      "directory": "bundle/requirements",
      "filePattern": "{id}.yaml"
    },
    {
      "entityType": "Task",
      "idField": "id",
      "schemaPath": "schemas/Task.schema.json",
      "directory": "bundle/tasks",
      "filePattern": "{id}.yaml"
    }
  ],
  "relations": [
    {
      "name": "RequirementBelongsToFeature",
      "fromEntity": "Requirement",
      "fromField": "featureIds",
      "toEntity": "Feature",
      "multiplicity": "many"
    },
    {
      "name": "TaskImplementsRequirement",
      "fromEntity": "Task",
      "fromField": "requirementIds",
      "toEntity": "Requirement",
      "multiplicity": "many"
    }
  ]
}

